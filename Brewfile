# Install development pre-requisites
brew 'cmake'
brew 'direnv'
# libdatachannel does not compile because of an OpenSSL error with node 17
# See: https://github.com/murat-dogan/node-datachannel/issues/65
brew 'node@16'
brew 'openssl'
# Note: rust module not installed via Homebrew since napi uses rustup to determine current target
# Run 'rustup-init' after installation to install rust
brew 'rustup-init'
brew 'yarn'
